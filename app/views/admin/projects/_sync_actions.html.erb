<%= button_to 'Sync Project Issues', sync_issues_admin_project_path(resource) unless resource.processing? %>
<%= button_to 'Sync Project Worklogs', sync_worklogs_admin_project_path(resource) if resource.can_sync_additional_info? %>
<%= button_to 'Sync Project Histories', sync_histories_admin_project_path(resource) if resource.can_sync_additional_info? %>

